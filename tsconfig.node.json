{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,

    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true
  },
  "include": ["vite.config.ts"]
}
